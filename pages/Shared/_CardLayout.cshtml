<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" >

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
          @RenderSection("Script", required: false)
          @RenderSection("NewCss", required: false)
      <link rel="stylesheet" href="~/css/main.css">

    <title>Document</title>
</head>
<body>
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
       <div class="container">
        <a class="navbar-brand fw-bold fs-4" href="#">
          <img
            src="https://upload.wikimedia.org/wikipedia/commons/a/a6/Logo_NIKE.svg"
            alt="Nike"
            height="30"
          />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#nikeNavbar"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="nikeNavbar">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="#">Yeni Gelenler</a>
            </li>
            <li class="nav-item"><a class="nav-link" href="/Home/List">Ürünler</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Kadın</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Çocuk</a></li>
            <li class="nav-item"><a class="nav-link" href="#">İndirim</a></li>
          </ul>
          <div id="searchBox" class="d-none mx-auto" style="width: 400px;">
                    <form method="get" action="/Home/List" class="d-flex">
                        <input type="text" name="q" class="form-control" placeholder="Ürün Ara..." />
                         <button type="submit" class="btn btn-dark btn-sm ms-2">Ara</button>
                    </form>
          </div>

        <ul class="navbar-nav mb-2 mb-lg-0 d-flex align-items-center gap-3">

         <li class="nav-item">
            <a class="nav-link" href="#">
              <i class="bi bi-search fs-5"></i>
            </a>
          </li>      

          @if(User!.Identity.IsAuthenticated)
          {
            <li class="nav-item">
                <a class="nav-link" href="">
                <i class="bi bi-cart fs-5"></i>
              </a>
             </li>
             <li class="nav-item">
               <a class="nav-link" href="/Home/AddProduct" >
                <i class="bi bi-plus-square fs-5"></i>
              </a>
            </li>
              <li class="nav-item">
                <a href="/Account/Logout" class="btn btn-link nav-link p-0">
                  <i class="bi bi-box-arrow-right fs-5"></i>
                </a>
             </li>
          }else
          {
             <li class="nav-item">
              <a class="nav-link" href="/Account/Create">
                <i class="bi bi-person-plus fs-5"></i>
              </a>
             </li>
              <li class="nav-item">
                <a class="nav-link" href="/Account/Login">
                  <i class="bi bi-person fs-5"></i>
                </a>
             </li>
          }
         
         
       </ul>
      
        </div>
      </div>
    </nav>

     <div class="container" style="margin-top: 70px;">
        @RenderBody()
     </div>

        <script>
          const searchIcon = document.querySelector('.bi-search');
          const searchBox = document.getElementById('searchBox');

          searchIcon.addEventListener('click', function (e) {
            e.preventDefault();
            searchBox.classList.toggle('d-none');
          });
        </script>
    
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>