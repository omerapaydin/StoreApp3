@model List<Product>

<div class="row">
    <div class="col-md-3">
    
          <div  class="card shadow-sm border-0 rounded-4 p-3 bg-light">
            <h5 class="fw-bold text-center mb-3">
              <a style="text-decoration : none; color : #212529;" href="/Home/List">Kategoriler</a>
            </h5>
            <ul class="list-group list-group-flush">

              <li class="list-group-item bg-transparent border-0">
                <a class="text-decoration-none text-dark fw-semibold d-block text-center py-2">
                  Kitap
                </a>
              </li> 
              <li class="list-group-item bg-transparent border-0">
                <a class="text-decoration-none text-dark fw-semibold d-block text-center py-2">
                  Telefon
                </a>
              </li> 
              <li class="list-group-item bg-transparent border-0">
                <a class="text-decoration-none text-dark fw-semibold d-block text-center py-2">
                  Ayakkabı
                </a>
              </li> 

            </ul>
          </div>
    </div>


     <div class="col-md-9">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      @foreach(var prd in Model)
      {
       <div class="col">
           <div class="card product-card h-100 position-relative">
            <div class="favorite-icon">
                <i class="fa-regular fa-heart"></i>
            </div>

            <a href="/Home/Details/@prd.ProductId">
                <img src="~/img/@prd.Image" class="card-img-top" alt="@prd.Title"
                    style="object-fit: cover; height: 400px;" />
            </a>

            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                <h6 class="card-title">@prd.Title</h6>
                <p class="card-text">@prd.Description</p>
                <p class="fw-bold">₺@prd.Price</p>
                </div>

                <button class="btn btn-outline-light mt-3 add-to-cart-btn">
                <i class="fa-solid fa-cart-plus me-2"></i>Sepete Ekle
                </button>
            </div>
            </div>
         </div>
        }
    </div>
  </div>
</div>


<script>
  document.querySelectorAll('.toggle-header').forEach(header => {
    header.addEventListener('click', () => {
      const panelBody = header.nextElementSibling;
      panelBody.style.display = panelBody.style.display === 'none' ? 'block' : 'none';
    });
  });
</script>